{
  "name": "@lightelligence/react",
  "version": "0.4.2",
  "license": "UNLICENSED",
  "main": "dist/cjs/index.js",
  "scripts": {
    "start": "styleguidist server",
    "build": "rm -rf dist && npm run transpile-esm && npm run transpile-cjs",
    "build:docs": "styleguidist build",
    "pretest": "npm run lint",
    "test": "react-scripts test",
    "lint": "eslint src/ && prettier -c \"src/**/*.js\"",
    "lint:fix": "eslint --fix src/ && prettier -c --write \"src/**/*.js\"",
    "transpile-esm": "BABEL_ENV=esm babel src -d dist/esm --copy-files",
    "transpile-cjs": "BABEL_ENV=cjs babel src -d dist/cjs --copy-files "
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "humps": "^2.0.1",
    "prop-types": "^15.6.2",
    "react-uid": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@lightelligence/styles": "^0.5.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "classnames": "^2.2.6",
    "css-loader": "^2.1.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "history": "^4.9.0",
    "humps": "^2.0.1",
    "husky": "^1.3.1",
    "jest-dom": "^3.1.3",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "normalize.css": "^8.0.1",
    "prettier": "^1.16.4",
    "prop-types": "^15.6.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "^5.0.0",
    "react-router-prop-types": "^1.0.4",
    "react-scripts": "^3.0.0",
    "react-styleguidist": "^9.0.4",
    "react-testing-library": "^6.0.1",
    "react-uid": "^2.2.0",
    "uniqid": "^5.0.3",
    "url-polyfill": "^1.1.3"
  },
  "peerDependencies": {
    "@lightelligence/styles": "^0.4.1",
    "react-dom": "^16.8.4",
    "react-router-dom": "^5.0.0",
    "react": "^16.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && sh scripts/branch-name"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix -- --max-warnings 0",
      "prettier --write",
      "git add"
    ]
  }
}
